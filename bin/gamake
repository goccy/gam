#!/usr/bin/perl

`qmake -project`;
use Cwd;
my $cur_dir = getcwd();
my @dirs = split(/\//, $cur_dir);
my $dir_name = $dirs[$#dirs], "\n";
my $project_file = $dir_name . ".pro";
#print $project_file, "\n";
open(IN, $project_file);
open (OUT, "> tmp.pro");
my $qtFlag = 0;
while ($line = <IN>) {
	if ($line =~ /QT/) {
		$line =~ s/\n//g;
		$line .= " opengl\n";
		$qtFlag = 1;
	}
	print (OUT $line);
}
if ($qtFlag == 0) {
	print (OUT "QT += opengl");
}
`mv tmp.pro $project_file`;

`qmake`;
open(IN, "Makefile");
open(OUT, "> tmp.mk");
while ($line = <IN>) {
	if ($line =~ /INCPATH/) {
		$line =~ s/\n//g;
		$line .= " -I/usr/local/include/ -I/usr/local/include/opencv/ -I/usr/local/include/Box2D/\n";
	} elsif ($line =~ /LIBS/) {
		$line =~ s/\n//g;
		$line .= " -L/usr/local/lib/ -lgam\n";
	}
	print(OUT $line);
}
close(IN);
close(OUT);
`mv tmp.mk Makefile`;
